<nav class="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><span aria-hidden="true">&larr;</span> {{tNewer Posts}}</a>
    {{/if}}
    <span class="page-number">{{tPage {{page}} of {{pages}} }}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">{{tOlder Posts}} <span aria-hidden="true">&rarr;</span></a>
    {{/if}}
</nav>